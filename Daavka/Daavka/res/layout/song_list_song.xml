<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
        android:background="@color/pop_frame"
    android:orientation="horizontal" xmlns:app="http://schemas.android.com/apk/res/mn.skyware.daavkaguitar">

    <mn.skyware.view.AutofitTextView
        android:id="@+id/song_name"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:singleLine="true"
        app:minTextSize="10sp"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="horizontal" >

        <mn.skyware.view.AutofitTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="Түвшин:"
            android:layout_gravity="center"
			android:textSize="13sp"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/song_lvl"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:src="@drawable/level1" />
    </LinearLayout>

    <ImageView
        android:id="@+id/song_fav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:layout_margin="10dp"
        android:src="@drawable/favwhite" />

</LinearLayout>